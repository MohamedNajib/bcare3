<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.salon_taps.RatingsTapFragment">


    <com.example.fontutil.TextViewCustomFont
        android:id="@+id/textViewCustomFont23"
        style="@style/rat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/Specialist_values"
        app:font_name="@string/VIP_Rawy_Regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.fontutil.EditTextCustomFont
        android:id="@+id/editTextCustomFont2"
        android:layout_width="@dimen/dimension0"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dimension24"
        android:background="@drawable/pttnn"
        android:gravity="center"
        android:hint="@string/Write_your_review_in_the_app_here"
        android:padding="@dimen/dimension12"
        app:font_name="@string/VIP_Rawy_Regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewCustomFont23"
        app:layout_constraintTop_toBottomOf="@+id/textViewCustomFont23" />

    <com.example.fontutil.ButtonCustomFont
        android:id="@+id/buttonCustomFont6"
        style="@style/t_ppn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimension32"
        android:layout_marginTop="@dimen/dimension8"
        android:background="@drawable/pl"
        android:paddingStart="@dimen/dimension32"
        android:paddingEnd="@dimen/dimension32"
        android:textAllCaps="false"
        android:text="@string/Submit_your_rating"
        app:font_name="@string/VIP_Rawy_Regular"
        app:layout_constraintEnd_toEndOf="@+id/editTextCustomFont2"
        app:layout_constraintTop_toBottomOf="@+id/editTextCustomFont2" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimension8"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCustomFont6"
        app:layout_constraintEnd_toStartOf="@+id/buttonCustomFont6"
        app:layout_constraintStart_toStartOf="@+id/editTextCustomFont2"
        app:layout_constraintTop_toTopOf="@+id/buttonCustomFont6" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension1"
        android:layout_marginTop="@dimen/dimension16"
        android:background="#ff3d5a6f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCustomFont6" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension1"
        android:layout_marginTop="@dimen/dimension24"
        android:background="#ff000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <com.example.fontutil.TextViewCustomFont
        android:id="@+id/textViewCustomFont24"
        style="@style/revu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension24"
        android:text="@string/Customer_opinions"
        app:font_name="@string/VIP_Rawy_Regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimension8"
        app:layout_constraintBottom_toTopOf="@+id/buttonCustomFont7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCustomFont24"
        tools:itemCount="2"
        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/item_reviews_special"
        tools:orientation="vertical"
        tools:scrollbars="vertical"
        tools:showIn="@layout/item_reviews_special"
        tools:spanCount="2" />

    <com.example.fontutil.ButtonCustomFont
        android:id="@+id/buttonCustomFont7"
        style="@style/mor"
        android:layout_width="@dimen/dimension0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension24"
        android:layout_marginEnd="@dimen/dimension24"
        android:layout_marginBottom="@dimen/dimension24"
        android:background="@drawable/ptnn"
        android:drawableEnd="@drawable/ic_chevron_right_lite"
        android:paddingStart="@dimen/dimension16"
        android:paddingEnd="@dimen/dimension16"
        android:text="@string/Mor"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>



