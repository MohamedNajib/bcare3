<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="294dp" android:height="59dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff23272c" />
            <corners android:radius="3dp" />
            <solid android:color="#ff3b3f52" />
            <item android:name="android:shadowColor">#1a051021</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">1</item>
        </shape>
    </item>
</selector>