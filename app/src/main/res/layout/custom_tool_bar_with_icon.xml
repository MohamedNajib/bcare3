<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backGround_SelectSalon_item"
    android:id="@+id/custom_toolbar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ToolBar_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_notification_icon" />

        <com.example.fontutil.TextViewCustomFont
            android:id="@+id/TV_TitleTB"
            style="@style/ProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            app:font_name="@string/VIP_Rawy_Bold_Bold"
            app:layout_constraintBottom_toBottomOf="@+id/ToolBar_imag"
            app:layout_constraintStart_toEndOf="@+id/ToolBar_imag"
            app:layout_constraintTop_toTopOf="@+id/ToolBar_imag"
            app:layout_constraintVertical_bias="0.52"
            tools:text="ssssss" />

        <ImageView
            android:id="@+id/IV_BackTB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginEnd="@dimen/dimension24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>

