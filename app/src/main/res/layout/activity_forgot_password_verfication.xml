<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_background"
    tools:context=".ui.activity.ForgotPasswordVerification">


    <ImageView
        android:id="@+id/IV_BackIconForgotVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_s" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dimension200"
        android:layout_height="@dimen/dimension115"
        android:layout_marginStart="@dimen/dimension8"
        android:layout_marginTop="@dimen/dimension90"
        android:layout_marginEnd="@dimen/dimension8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_forgot" />

    <com.example.fontutil.TextViewCustomFont
        android:id="@+id/TXT_Confirm_Code"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension24"
        android:layout_marginEnd="@dimen/dimension24"
        android:text="@string/verify_your_email"
        app:font_name="@string/VIP_Rawy_Bold_Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.example.fontutil.TextViewCustomFont
        android:id="@+id/TXT_Description"
        style="@style/login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension24"
        android:layout_marginTop="@dimen/dimension8"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        android:layout_marginEnd="24dp"
        android:text="@string/Enter_the_code_sent_to_your_email_to_confirm"
        app:font_name="@string/VIP_Rawy_Regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TXT_Confirm_Code" />


    <com.chaos.view.PinView
        android:id="@+id/pinViewForgotVerification"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/PinV"
        app:itemCount="4"
        android:textColor="@color/tap_blue"
        android:textSize="@dimen/text20"
        android:textStyle="bold"
        app:viewType="line"
        app:lineColor="@color/tap_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TXT_Description" />



    <com.example.fontutil.ButtonCustomFont
        android:id="@+id/BTN_ConfirmCodeForgotVerification"
        style="@style/zzzz"
        android:layout_width="@dimen/dimension0"
        android:layout_height="@dimen/dimension50"
        android:layout_marginStart="@dimen/dimension24"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/dimension24"
        android:background="@drawable/login_btn"
        android:text="@string/confirm"
        android:textAllCaps="false"
        app:font_name="@string/VIP_Rawy_Bold_Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinViewForgotVerification" />

    <ProgressBar
        android:id="@+id/progress_view"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>