<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.LoginMainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dimension156"
                android:layout_height="@dimen/dimension115"
                android:layout_marginStart="@dimen/dimension8"
                android:layout_marginTop="@dimen/dimension90"
                android:layout_marginEnd="@dimen/dimension8"
                android:src="@drawable/logo_w"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textView"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension24"
                android:layout_marginEnd="@dimen/dimension24"
                android:text="@string/LogIn"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textView2"
                style="@style/login_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension24"
                android:layout_marginTop="@dimen/dimension8"
                android:layout_marginEnd="@dimen/dimension24"
                android:gravity="center"
                android:text="@string/Choose_the_method_that_is_right_for_you"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <com.example.fontutil.ButtonCustomFont
                android:id="@+id/BTN_LoginPyPhoneNumber"
                style="@style/__"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/login_btn"
                android:drawableStart="@drawable/ic_phone_i"
                android:paddingStart="@dimen/dimension16"
                android:paddingTop="@dimen/dimension4"
                android:paddingEnd="@dimen/dimension16"
                android:paddingBottom="@dimen/dimension4"
                android:text="@string/By_telephone_number"
                android:textAllCaps="false"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <com.example.fontutil.ButtonCustomFont
                android:id="@+id/BTN_LoginPyEmile"
                style="@style/__"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/login_btn"
                android:drawableStart="@drawable/ic_sign_up_imail_i"
                android:paddingStart="@dimen/dimension16"
                android:paddingTop="@dimen/dimension4"
                android:paddingEnd="@dimen/dimension16"
                android:paddingBottom="@dimen/dimension4"
                android:text="@string/By_Email"
                android:textAllCaps="false"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="@+id/BTN_LoginPyPhoneNumber"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/BTN_LoginPyPhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/BTN_LoginPyPhoneNumber" />

            <LinearLayout
                android:id="@+id/textViewCustomFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimension8"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/BTN_LoginPyEmile"
                app:layout_constraintTop_toBottomOf="@+id/BTN_LoginPyEmile">

                <com.example.fontutil.TextViewCustomFont
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="@string/do_Not_Have_an_Account_Yet"
                    app:font_name="@string/VIP_Rawy_Regular" />

                <LinearLayout
                    android:id="@+id/TV_CreateAccountLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dimension1"
                    android:layout_marginEnd="@dimen/dimension1">

                    <com.example.fontutil.TextViewCustomFont
                        style="@style/no_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Create_One"
                        app:font_name="@string/VIP_Rawy_Regular" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />
                </LinearLayout>
            </LinearLayout>


            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/TV_ForGotPassLink"
                style="@style/no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="bottom"
                android:padding="@dimen/dimension8"
                android:text="@string/Forgot_password"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintBottom_toBottomOf="@+id/textViewCustomFont"
                app:layout_constraintEnd_toEndOf="@+id/BTN_LoginPyEmile"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textViewCustomFont"
                app:layout_constraintTop_toTopOf="@+id/textViewCustomFont" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimension1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/itemGray"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textView7"
                style="@style/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:paddingStart="@dimen/dimension24"
                android:paddingEnd="@dimen/dimension24"
                android:text="@string/or"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BTN_LoginPyEmile" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="@dimen/dimension0"
                android:layout_height="@dimen/dimension1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/dimension8"
                android:background="@color/itemGray"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <com.example.fontutil.ButtonCustomFont
                android:id="@+id/BTN_LoginBottomSheet"
                style="@style/ssoo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ssoosh"
                android:text="@string/via_social_media"
                android:textAllCaps="false"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bottom_sheet"
            android:elevation="8dp"
            android:fitsSystemWindows="true"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="@string/bottom_sheet_behavior">


            <ImageView
                android:id="@+id/IV_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_icon_cloase_bu" />


            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textViewCustomFont21"
                style="@style/txttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="انشاء حساب"
                app:font_name="@string/VIP_Rawy_Bold_Bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.fontutil.TextViewCustomFont
                android:id="@+id/textViewCustomFont22"
                style="@style/hgf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="عن طريق منصات التواصل الإجتماعي"
                app:font_name="@string/VIP_Rawy_Regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCustomFont21" />

            <RelativeLayout
                android:id="@+id/IV_FacebookLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCustomFont22">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebook_sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/IV_TwitterLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/IV_FacebookLogin"
                app:layout_constraintStart_toStartOf="@+id/IV_FacebookLogin"
                app:layout_constraintTop_toBottomOf="@+id/IV_FacebookLogin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twitter" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/IV_InstagramLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/IV_TwitterLogin"
                app:layout_constraintStart_toStartOf="@+id/IV_TwitterLogin"
                app:layout_constraintTop_toBottomOf="@+id/IV_TwitterLogin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/instagram" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/IV_SnapshatLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/IV_InstagramLogin"
                app:layout_constraintStart_toStartOf="@+id/IV_InstagramLogin"
                app:layout_constraintTop_toBottomOf="@+id/IV_InstagramLogin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/snapshat" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/IV_GoogleLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/IV_SnapshatLogin"
                app:layout_constraintStart_toStartOf="@+id/IV_SnapshatLogin"
                app:layout_constraintTop_toBottomOf="@+id/IV_SnapshatLogin">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/google" />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimension10"
                    android:visibility="gone" />

            </RelativeLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>